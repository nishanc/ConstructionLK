@model IEnumerable<ConstructionLK.Models.ItemRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="req" class="table table-bordered table-hover">
    <thead>
        <tr class="warning">
            <th>Username</th>
            <th>Item Name</th>
            <th>Status</th>
            <th>Message</th>
            <th>Requested Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => request.Customer.Username)
</td>
                <td>@Html.DisplayFor(modelItem => request.Item.ItemName)
</td>
                <td>@Html.DisplayFor(modelItem => request.ItemRequestStatus.Name)
</td>
                <td>@Html.DisplayFor(modelItem => request.Message)
</td>
                <td>
                    @Html.DisplayFor(modelItem => request.CreatedDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = request.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = request.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = request.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#req").DataTable();
        });
    </script>
}
